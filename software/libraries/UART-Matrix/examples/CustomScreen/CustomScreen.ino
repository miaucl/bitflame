byte screen[32]=
{
  0x00,0x00,
  0x22,0x78,
  0x36,0x44,
  0x2A,0x44,
  0x22,0x44,
  0x22,0x44,
  0x22,0x78,
  0x00,0x00,
  0x87,0xDF,
  0x84,0x11,
  0x84,0x11,
  0x87,0x91,
  0x84,0x1F,
  0x84,0x10,
  0xF7,0xD0,
  0x00,0x00
};

MdLep16X16 mdLep(0xFF, 0xFF, 0xFF, 0xFF);
byte count =0;

void setup()
{
   mdLep.init();
   mdLep.loadScreen(screen);
}

void loop()
{
  mdLep.displayOn();
  delay(1000);
  mdLep.displayOff();
  delay(1000);
}
